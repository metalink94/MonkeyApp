<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/lvl_bg">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="128dp"
            android:layout_marginBottom="24dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/monkey_3"/>

    <ImageView
            android:id="@+id/lvlOne"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_level"
            android:layout_marginLeft="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="164dp"/>

    <ImageView
            android:id="@+id/lvlTwo"
            android:layout_toRightOf="@+id/lvlOne"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_level"
            android:layout_marginLeft="120dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/lvlOne"
            android:layout_marginStart="120dp"/>


    <ImageView
            android:id="@+id/lvlThree"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_level"
            android:layout_marginRight="86dp"
            android:layout_marginTop="86dp"/>

</RelativeLayout>
